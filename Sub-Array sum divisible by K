//Sub-Array sum divisible by K
public class Solution 
{
	static int subCount(int arr[] ,int n,int k)
    {
		int ans[] = new int[k];
		int sum=0;
		for(int x:arr)
		{
			sum+= (x%k+k)%k;
			ans[sum%k]++;
		}
		int pos = ans[0];
		for(int c:ans)
		{
			pos+=(c*(c-1))/2;
		}
		return pos;
    }
	public static void main(String[] args) 
	{
		int arr[] = {4, 5, 0, -2, -3, 1};
		System.out.println(subCount(arr,6,5));
	}
}
