//Rearrange an array with O(1) extra space
public class Solution 
{
	static void arrange(int arr[], int n)
    {
		for(int i=0;i<n;i++)
		{
			arr[i] = arr[i]+arr[arr[i]]%n*n;
		}
		for(int i=0;i<n;i++)
		{
			arr[i]=arr[i]/n;
		}
		for(int i=0;i<n;i++)
		{
			System.out.println(arr[i]);
		}
    }
	public static void main(String[] args) 
	{
		int arr[]= {4,0,2,1,3};
		int n=arr.length;
		arrange(arr,n);
	}
}
